<aside class="filter-sidebar">
    <h3>Danh mục</h3>
    <ul class="category-list">
        <li>
            <a asp-controller="Product" asp-action="Index" asp-route-id=""
               asp-route-minPrice="@Context.Request.Query["minPrice"]"
               asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
               asp-route-isPromotion="false"
               asp-route-search="@ViewBag.SearchTerm"
               class="category-link @(ViewBag.CurrentCategoryId == null && !ViewBag.IsPromotion ? "active" : "")">
                Tất cả
            </a>  <!-- Đặt isPromotion=false cho "Tất cả" -->
        </li>
        <li>
            <a asp-controller="Product" asp-action="Index" asp-route-id="1"
               asp-route-minPrice="@Context.Request.Query["minPrice"]"
               asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
               asp-route-isPromotion="@(ViewBag.IsPromotion ? "true" : "false")"
               asp-route-search="@ViewBag.SearchTerm"
               class="category-link @(ViewBag.CurrentCategoryId == 1 ? "active" : "")">
                Khu vườn kỳ diệu
            </a>
        </li>
        <li>
            <a asp-controller="Product" asp-action="Index" asp-route-id="2"
               asp-route-minPrice="@Context.Request.Query["minPrice"]"
               asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
               asp-route-isPromotion="@(ViewBag.IsPromotion ? "true" : "false")"
               asp-route-search="@ViewBag.SearchTerm"
               class="category-link @(ViewBag.CurrentCategoryId == 2 ? "active" : "")">
                Kỳ quan kiến trúc
            </a>
        </li>
        <li>
            <a asp-controller="Product" asp-action="Index" asp-route-id="3"
               asp-route-minPrice="@Context.Request.Query["minPrice"]"
               asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
               asp-route-isPromotion="@(ViewBag.IsPromotion ? "true" : "false")"
               asp-route-search="@ViewBag.SearchTerm"
               class="category-link @(ViewBag.CurrentCategoryId == 3 ? "active" : "")">
                Phép thuật Hogwarts
            </a>
        </li>
        <li>
            <a asp-controller="Product" asp-action="Index" asp-route-id="4"
               asp-route-minPrice="@Context.Request.Query["minPrice"]"
               asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
               asp-route-isPromotion="@(ViewBag.IsPromotion ? "true" : "false")"
               asp-route-search="@ViewBag.SearchTerm"
               class="category-link @(ViewBag.CurrentCategoryId == 4 ? "active" : "")">
                Đường đua siêu xe
            </a>
        </li>
        <li>
            <a asp-controller="Product" asp-action="Index" asp-route-id="5"
               asp-route-minPrice="@Context.Request.Query["minPrice"]"
               asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
               asp-route-isPromotion="@(ViewBag.IsPromotion ? "true" : "false")"
               asp-route-search="@ViewBag.SearchTerm"
               class="category-link @(ViewBag.CurrentCategoryId == 5 ? "active" : "")">
                Nhịp đập công trường
            </a>
        </li>
    </ul>

    <h3>Khuyến mãi</h3>
    <ul class="category-list">
        <li>
            <a asp-controller="Product" asp-action="Index"
               asp-route-minPrice="@Context.Request.Query["minPrice"]"
               asp-route-maxPrice="@Context.Request.Query["maxPrice"]"
               asp-route-isPromotion="true"
               asp-route-search="@ViewBag.SearchTerm"
               class="category-link @(ViewBag.IsPromotion ? "active" : "")">
                Sản phẩm khuyến mãi
            </a>
        </li>
    </ul>

    <h3>Lọc theo giá</h3>
    <form method="get" asp-controller="Product" asp-action="Index" id="priceFilterForm">
        <input type="hidden" name="id" value="@Context.Request.Query["id"]" />
        <input type="hidden" name="isPromotion" value="@Context.Request.Query["isPromotion"]" />
        <input type="hidden" name="search" value="@ViewBag.SearchTerm" />

        <div class="mb-2">
            <label for="minPrice">Từ (₫):</label>
            <input type="number" id="minPrice" name="minPrice" class="form-control" value="@Context.Request.Query["minPrice"]" min="0" />
        </div>

        <div class="mb-2">
            <label for="maxPrice">Đến (₫):</label>
            <input type="number" id="maxPrice" name="maxPrice" class="form-control" value="@Context.Request.Query["maxPrice"]" min="0" />
        </div>

        <button type="submit" class="btn btn-primary btn-sm mt-1" style="color: black">Áp dụng</button>
        <button type="button" class="btn btn-secondary btn-sm mt-1 ms-2" id="resetFilter">Reset</button>
    </form>
</aside>