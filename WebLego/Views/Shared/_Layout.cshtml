    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            $('.search-icon').click(function () {
                const box = $('.search-expand-box');
                box.removeClass('d-none').addClass('active');
                $('.search-overlay').addClass('active').removeClass('d-none');
                box.find('.search-input-expand').focus();
            });

            $('.close-search-expand, .search-overlay').click(function () {
                const box = $('.search-expand-box');
                box.removeClass('active');
                $('.search-overlay').removeClass('active');
                setTimeout(() => {
                    box.addClass('d-none');
                    $('.search-overlay').addClass('d-none');
                }, 300);
                box.find('.search-input-expand').val('');
            });

            $('.search-input-expand').keypress(function (e) {
                if (e.which === 13) {
                    e.preventDefault();
                    const keyword = $(this).val().trim();
                    if (keyword && keyword.length >= 2) {
                        // Lấy các tham số hiện tại từ URL
                        const urlParams = new URLSearchParams(window.location.search);
                        const id = urlParams.get('id') || '';
                        const minPrice = urlParams.get('minPrice') || '';
                        const maxPrice = urlParams.get('maxPrice') || '';
                        const isPromotion = urlParams.get('isPromotion') || '';
                        const page = '1'; // Reset về trang 1 khi tìm kiếm mới

                        // Tạo URL với tất cả tham số
                        let url = '/Product/Index?';
                        const params = [];
                        params.push('search=' + encodeURIComponent(keyword));
                        if (id) params.push('id=' + id);
                        if (minPrice) params.push('minPrice=' + minPrice);
                        if (maxPrice) params.push('maxPrice=' + maxPrice);
                        if (isPromotion) params.push('isPromotion=' + isPromotion);
                        params.push('page=' + page);

                        url += params.join('&');
                        window.location.href = url;
                    } else {
                        alert('Vui lòng nhập ít nhất 2 ký tự để tìm kiếm.');
                    }
                }
            });
        });
    </script>

</body>
