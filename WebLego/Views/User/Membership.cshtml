@model WebLego.Models.ViewModel.MembershipViewModel
@{
    ViewData["Title"] = "Hạng thành viên";

    var rankToClass = new Dictionary<string, string>
    {
        { "Đồng", "dong" },
        { "Bạc", "bac" },
        { "Vàng", "vang" }
    };

    // Tìm index của hạng hiện tại để đặt làm active
    var activeIndex = Model.MembershipTiers.FindIndex(t => t.Name == Model.CustomerRank);
    activeIndex = activeIndex == -1 ? 0 : activeIndex;

    // Dữ liệu lợi ích cho các hạng
    var benefits = new Dictionary<string, (string Requirement, string Benefit)>
    {
        { "Đồng", ("0 VNĐ", "Hạng khởi đầu dành cho mọi khách hàng, sẵn sàng để khám phá các ưu đãi đặc biệt.") },
        { "Bạc", ("5,000,000 VNĐ", "Tận hưởng mã giảm giá 5% tự động áp dụng cho mọi đơn hàng, nâng tầm trải nghiệm mua sắm.") },
        { "Vàng", ("10,000,000 VNĐ", "Đặc quyền mã giảm giá 10% tự động áp dụng khi đặt hàng, mang đến giá trị vượt trội cho mỗi giao dịch.") }
    };

    // Tính ngày reset tiếp theo (01/01 của năm sau)
    var now = DateTime.Now;
    var nextResetDate = new DateTime(now.Year + 1, 1, 1);
}

<link href="~/css/profile.css" rel="stylesheet" />
<link href="~/css/membership.css" rel="stylesheet" />

<div class="profile-layout">
    <div class="page-container">
        <div class="header-row">
            <h1 class="profile-title">Hạng thành viên</h1>
        </div>
        <div class="content-wrapper" style="margin-bottom: 40px">
            <div class="sidebar-wrapper">
                @Html.Partial("_AccountSidebar")
            </div>
            <div class="profile-content">
                <div class="card p-4 shadow-sm">
                    <div class="membership-info mb-4">
                        <div class="row align-items-center">
                            <div class="col-md-6 d-flex align-items-center">
                                <img src="~/images/icon_cartcheck.png" alt="Cart Check" class="me-2" style="width: 26px; height: 26px;" />
                                <p class="mb-0" style="font-weight: 500">Tổng số đơn hàng đã mua: <strong>@Model.CompletedOrders</strong></p>
                            </div>
                            <div class="col-md-6 d-flex align-items-center">
                                <img src="~/images/icon_billcheck.png" alt="Bill Check" class="me-2" style="width: 25px; height: 25px;" />
                                <p class="mb-0" style="font-weight: 500">Tổng tiền tích lũy: <strong>@Model.TotalSpent.ToString("N0") VNĐ</strong></p>
                            </div>
                        </div>
                    </div>
                    <div class="membership-carousel">
                        <h4>Hạng thành viên</h4>
                        <div id="membershipCarousel" class="carousel slide" data-bs-ride="false" data-bs-wrap="true">
                            <div class="carousel-inner">
                                @for (int i = 0; i < Model.MembershipTiers.Count; i++)
                                {
                                    var tier = Model.MembershipTiers[i];
                                    var isActive = i == activeIndex ? "active" : "";
                                    var cssClass = rankToClass.ContainsKey(tier.Name) ? rankToClass[tier.Name] : "";
                                    var isUnlocked = Model.TotalSpent >= tier.RequiredAmount;
                                    <div class="carousel-item @isActive">
                                        <div class="membership-card @cssClass">
                                            <div class="tier-header d-flex justify-content-between align-items-center">
                                                <h5 class="tier-title mb-0">
                                                    @if (isUnlocked)
                                                    {
                                                        <img src="~/images/icon_unlocked.png" alt="Unlocked" class="me-2" style="width: 20px; height: 20px;" />
                                                    }
                                                    else
                                                    {
                                                        <img src="~/images/icon_locked.png" alt="Locked" class="me-2" style="width: 20px; height: 20px;" />
                                                    }
                                                    @tier.Name
                                                </h5>
                                                <p class="tier-description mb-0">@tier.Description</p>
                                            </div>
                                            @if (tier.Name != "Đồng")
                                            {
                                                <div class="progress-container">
                                                    <p class="progress-text">Đã mua <strong>@Model.TotalSpent.ToString("N0")</strong> / @tier.RequiredAmount.ToString("N0") VNĐ</p>
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: @(tier.SpentPercentage)%"
                                                             aria-valuenow="@tier.SpentPercentage" aria-valuemin="0" aria-valuemax="100">
                                                        </div>
                                                    </div>
                                                </div>
                                                <p class="reset-notice">Hạng thành viên sẽ được cập nhật lại sau ngày @nextResetDate.ToString("dd/MM/yyyy").</p>
                                                <p class="status-text">@(isUnlocked ? "Đã mở khóa hạng thành viên" : $"Cần tích lũy thêm {((tier.RequiredAmount - Model.TotalSpent).ToString("N0"))} VNĐ để đạt hạng {tier.Name}")</p>
                                            }
                                            else
                                            {
                                                <p class="reset-notice">Hạng thành viên sẽ được cập nhật lại sau ngày @nextResetDate.ToString("dd/MM/yyyy").</p>
                                                <p class="status-text">Đã mở khóa hạng thành viên</p>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#membershipCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#membershipCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <div class="membership-benefits">
                        <h4>Lợi ích hạng thành viên</h4>
                        <ul class="benefits-list">
                            @foreach (var tier in Model.MembershipTiers)
                            {
                                var cssClass = rankToClass.ContainsKey(tier.Name) ? rankToClass[tier.Name] : "";
                                <li class="benefit-item @cssClass">
                                    <h5 class="benefit-title">@tier.Name</h5>
                                    <p class="benefit-requirement"><strong>Yêu cầu:</strong> Tổng tích lũy từ @benefits[tier.Name].Requirement</p>
                                    <p class="benefit-description"><strong>Lợi ích:</strong> @benefits[tier.Name].Benefit</p>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const carousel = document.querySelector('#membershipCarousel');
            const bootstrapCarousel = new bootstrap.Carousel(carousel, {
                ride: false,
                interval: false,
                wrap: true
            });
        });
    </script>
}