@model WebLego.Models.ViewModel.LoginViewModel
@{
    ViewData["NoLayout"] = true;
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container d-flex justify-content-center align-items-center vh-100 flex-column">
    <div class="text-center mb-3">
        <img src="/images/logo_lego.png" alt="PouletLG" height="70" class="me-3" />
    </div>
    <h2 class="text-center mb-4">Đăng nhập</h2>
    <div class="card shadow p-4" style="max-width: 550px; width: 100%;">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-wrapper mb-3">
                <label asp-for="EmailOrPhone" class="form-label"></label>
                <div class="gradient-border">
                    <input asp-for="EmailOrPhone" class="form-control custom-input" placeholder="Nhập email hoặc số điện thoại" />
                </div>
                <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
            </div>
            <div class="input-wrapper mb-3">
                <label asp-for="UserPassword" class="form-label"></label>
                <div class="gradient-border d-flex align-items-center">
                    <input asp-for="UserPassword" class="form-control border-0 p-2 custom-input" type="password" id="passwordInput" placeholder="Nhập mật khẩu" />
                    <span id="togglePassword" style="cursor: pointer; padding: 0 10px;">
                        <i class="fas fa-eye" id="eyeIcon"></i>
                    </span>
                </div>
                <span asp-validation-for="UserPassword" class="text-danger"></span>
            </div>
            <div class="mb-3 text-end">
                <a href="@Url.Action("ForgotPassword", "Auth")" style="color: black;">Quên mật khẩu?</a>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn custom-login-btn">Đăng nhập</button>
            </div>
        </form>
    </div>
    <div class="text-center mt-3">
        <span>Chưa có tài khoản? </span>
        <a href="@Url.Action("Register", "Auth")" style="color: black; font-weight: 600; text-decoration: underline;">
            Tạo tài khoản mới!
        </a>
    </div>
    <div class="text-center mt-3">
        <span>Hoặc</span>
    </div>
    <div class="mt-3" style="max-width: 300px; width: 100%;">
        <a class="btn google-login-btn d-flex align-items-center justify-content-between" href="@Url.Action("GoogleLogin", "Auth")">
            <span class="d-flex align-items-center">
                <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" alt="Google" width="20" height="20" class="me-2" />
                <span>Đăng nhập với Google</span>
            </span>
            <i class="fas fa-chevron-right"></i>
        </a>
    </div>
</div>

<!-- Modal thông báo tài khoản bị khoá -->
@if (TempData["AccountLocked"] != null)
{
    <div class="modal fade" id="accountLockedModal" tabindex="-1" role="dialog" aria-labelledby="accountLockedModalLabel" aria-hidden="true" style="z-index: 1055;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="accountLockedModalLabel">Tài khoản bị tạm khóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @TempData["AccountLocked"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
}

<style>
    body {
        height: 100vh;
        background: linear-gradient(135deg, #f6b17a 0%, #7077a1 100%);
        padding: 40px;
    }

    .gradient-border {
        padding: 2px;
        border-radius: 5px;
        background: linear-gradient(90deg, #FECC29 22%, #F5AC50 63%);
    }

    .custom-input {
        width: 100%;
        border: none;
        padding: 10px;
        border-radius: 5px;
        background-color: white;
        outline: none;
    }

        .custom-input:focus {
            box-shadow: none;
        }

    .custom-login-btn {
        background-color: #FECC29;
        border: none;
        border-radius: 50px;
        color: black;
        font-weight: 600;
        width: 150px;
        height: 40px;
    }

        .custom-login-btn:hover {
            background-color: #f5c400;
            color: black;
        }

    #togglePassword, #togglePassword i {
        background-color: transparent !important;
        box-shadow: none !important;
    }

    .google-login-btn {
        background-color: white;
        color: black;
        font-weight: 600;
        border: 2px;
        border-radius: 20px;
        padding: 10px 20px;
        transition: background-color 0.3s ease;
    }

        .google-login-btn:hover {
            background-color: #f1f1f1;
            text-decoration: none;
            color: black;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("togglePassword").addEventListener("click", function () {
            const passwordInput = document.getElementById("passwordInput");
            const eyeIcon = document.getElementById("eyeIcon");
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            eyeIcon.classList.toggle("fa-eye");
            eyeIcon.classList.toggle("fa-eye-slash");
        });

        // Hiển thị modal thông báo tài khoản bị khoá
        @if (TempData["AccountLocked"] != null)
        {
            <text>
                        $(document).ready(function () {
                            $('#accountLockedModal').modal('show');
                        });
            </text>
        }
    </script>
}