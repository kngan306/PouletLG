@model WebLego.Areas.Admin.Models.ContestViewModel
@{
    ViewData["Title"] = "Thêm cuộc thi";
}

<div class="container mt-5">
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary mb-4">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>

    <form id="createContestForm" enctype="multipart/form-data" novalidate>
        @Html.AntiForgeryToken()

        <div class="row g-4">
            <div class="col-md-6">
                <label asp-for="Title" class="form-label fw-semibold">Tiêu đề</label>
                <input asp-for="Title" class="form-control shadow-sm" required />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                <textarea asp-for="Description" class="form-control shadow-sm" rows="3" required></textarea>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="StartDate" class="form-label fw-semibold">Ngày bắt đầu</label>
                <input asp-for="StartDate" type="datetime-local" class="form-control shadow-sm" required />
                <span asp-validation-for="StartDate" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="EndDate" class="form-label fw-semibold">Ngày kết thúc</label>
                <input asp-for="EndDate" type="datetime-local" class="form-control shadow-sm" required />
                <span asp-validation-for="EndDate" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="RewardProductId" class="form-label fw-semibold">Sản phẩm phần thưởng</label>
                <select asp-for="RewardProductId" class="form-select shadow-sm" required>
                    <option value="">Chọn sản phẩm</option>
                    @foreach (var product in ViewBag.Products)
                    {
                        <option value="@product.ProductId">@product.ProductName</option>
                    }
                </select>
                <span asp-validation-for="RewardProductId" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="ImageFile" class="form-label fw-semibold">Tải lên hình ảnh</label>
                <input asp-for="ImageFile" type="file" class="form-control shadow-sm" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger small"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="IsActive" class="form-label fw-semibold">Trạng thái hoạt động</label>
                <select asp-for="IsActive" class="form-select shadow-sm">
                    <option value="true">Đang hoạt động</option>
                    <option value="false">Không hoạt động</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger small"></span>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary shadow-sm px-4 py-2 mt-3">
                    <i class="bi bi-plus-circle me-2"></i> Thêm cuộc thi
                </button>
            </div>
        </div>
    </form>

    <!-- Modal thông báo lỗi -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="errorModalLabel"><i class="bi bi-x-circle me-2"></i>Thông báo lỗi</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="errorMessage" class="mb-0"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal thông báo thành công -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="successModalLabel"><i class="bi bi-check-circle me-2"></i>Thành công</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p id="successMessage" class="mb-0"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" onclick="window.location.href='@Url.Action("Index", "Contest", new { area = "Admin" })'">OK</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $('#createContestForm').submit(function (e) {
                e.preventDefault();
                var formData = new FormData(this);

                $.ajax({
                    url: '@Url.Action("Create", "Contest", new { area = "Admin" })',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            $('#successMessage').text(response.message);
                            $('#successModal').modal('show');
                        } else {
                            $('#errorMessage').text(response.message);
                            $('#errorModal').modal('show');
                        }
                    },
                    error: function (xhr) {
                        $('#errorMessage').text(xhr.responseJSON?.message || 'Đã có lỗi xảy ra khi tạo cuộc thi.');
                        $('#errorModal').modal('show');
                    }
                });
            });
        });
    </script>

    <style>
        h2 {
            font-weight: 700;
            font-size: 2rem;
        }

        .form-label {
            font-weight: 600;
            font-size: 1rem;
        }

        .form-control,
        .form-select {
            border-radius: 0.5rem;
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
            transition: box-shadow 0.3s ease;
        }

            .form-control:focus,
            .form-select:focus {
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.3);
                border-color: #0d6efd;
            }

        button.btn-primary {
            border-radius: 0.5rem;
            font-weight: 600;
            font-size: 1rem;
        }

        /* Modal header colors */
        .modal-header.bg-danger {
            background-color: #dc3545 !important;
        }

        .modal-header.bg-success {
            background-color: #198754 !important;
        }
    </style>
}
