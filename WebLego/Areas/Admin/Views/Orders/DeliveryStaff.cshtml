@model List<WebLego.Areas.Admin.Models.OrderViewModel>

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Đơn hàng cần giao";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container py-4">
    <h2 class="mb-4 text-center text-primary"><i class="fas fa-truck"></i> @ViewData["Title"]</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> Không có đơn hàng nào cần giao.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-primary text-center">
                    <tr>
                        <th>Mã đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày đặt</th>
                        <th>Địa chỉ giao</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Chi tiết sản phẩm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr id="order-row-@order.OrderId">
                            <td class="text-center fw-semibold">@order.OrderId</td>
                            <td>@order.CustomerName</td>
                            <td class="text-center">@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                            <td>@order.FullAddress</td>
                            <td class="text-end text-danger fw-semibold">@string.Format("{0:N0} VNĐ", order.TotalAmount)</td>
                            <td id="status-@order.OrderId" class="text-center">@order.OrderStatus</td>
                            <td>
                                <ul class="list-unstyled mb-0 ps-2">
                                    @foreach (var detail in order.OrderDetails)
                                    {
                                        <li><i class="fas fa-cube text-secondary"></i> @detail.ProductName - SL: <strong>@detail.Quantity</strong></li>
                                    }
                                </ul>
                            </td>
                            <td class="text-center">
                                @if (order.OrderStatus == "Đang giao hàng")
                                {
                                    <button class="btn btn-success btn-sm btn-complete" data-order-id="@order.OrderId" data-bs-toggle="modal" data-bs-target="#confirmModal">
                                        <i class="fas fa-check-circle"></i> Hoàn thành
                                    </button>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<!-- Modal xác nhận -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="confirmModalLabel"><i class="fas fa-check-circle me-2"></i>Xác nhận hoàn thành</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn chuyển trạng thái đơn hàng sang <strong>Hoàn thành</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmCompleteBtn">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap & Axios -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>
    let selectedOrderId = null;

    document.querySelectorAll('.btn-complete').forEach(btn => {
        btn.addEventListener('click', function () {
            selectedOrderId = this.getAttribute('data-order-id');
        });
    });

    document.getElementById('confirmCompleteBtn').addEventListener('click', function () {
        if (!selectedOrderId) return;

        axios.post('@Url.Action("UpdateStatus", "Orders", new { area = "Admin" })', null, {
            params: {
                orderId: selectedOrderId,
                newStatus: 'Hoàn thành'
            }
        })
        .then(response => {
            if (response.data.success) {
                document.getElementById('status-' + selectedOrderId).textContent = 'Hoàn thành';
                const btn = document.querySelector(`button[data-order-id="${selectedOrderId}"]`);
                if (btn) {
                    btn.parentElement.innerHTML = '<span class="text-success fw-semibold">Giao hàng thành công</span>';
                }
                bootstrap.Modal.getInstance(document.getElementById('confirmModal')).hide();
                alert('Cập nhật trạng thái thành công!');
            } else {
                alert('Cập nhật trạng thái thất bại.');
            }
        })
        .catch(error => {
            if (error.response && error.response.status === 403) {
                alert('Bạn không có quyền thay đổi trạng thái đơn hàng này.');
            } else {
                alert('Có lỗi xảy ra khi cập nhật trạng thái.');
            }
        });
    });
</script>
