@model WebLego.DataSet.GdrService.AboutUsSection
@{
    ViewData["Title"] = "Chỉnh sửa Nội dung Trang Giới thiệu";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <!-- Error Message -->
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo lỗi"></button>
                </div>
            }

            <form asp-action="Edit" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="SectionId" />
                <div asp-validation-summary="All" class="text-danger mb-4 alert alert-danger alert-dismissible fade show" role="alert" style="@(ViewData.ModelState.IsValid ? "display: none;" : "")">
                    <strong>Vui lòng kiểm tra lại các trường nhập liệu:</strong>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo lỗi"></button>
                </div>

                <div class="row g-3">
                    <!-- Tiêu đề -->
                    <div class="col-12">
                        <label asp-for="Title" class="form-label fw-semibold">Tiêu đề</label>
                        <input asp-for="Title" class="form-control" required placeholder="Nhập tiêu đề nội dung" aria-describedby="titleHelp" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <small id="titleHelp" class="form-text text-muted">Tiêu đề nên ngắn gọn và rõ ràng.</small>
                    </div>

                    <!-- Mô tả -->
                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-semibold">Mô tả</label>
                        <textarea asp-for="Description" class="form-control" rows="5" required placeholder="Nhập mô tả nội dung" aria-describedby="descriptionHelp"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small id="descriptionHelp" class="form-text text-muted">Mô tả chi tiết về nội dung của mục này.</small>
                    </div>

                    <!-- Ảnh -->
                    <div class="col-12">
                        <label class="form-label fw-semibold">Ảnh</label>
                        <input type="file" name="imageFile" id="imageFile" class="form-control" accept="image/jpeg,image/png,image/gif" aria-describedby="imageFileHelp" />
                        <small id="imageFileHelp" class="form-text text-muted">Chọn file ảnh (JPEG, PNG, GIF). Kích thước tối đa đề xuất: 1920x1080px (tùy chọn).</small>
                        <img id="imagePreview" src="@(ViewBag.ImageExists ? Url.Content(Model.ImageUrl) : "/images/placeholder.png")" alt="Xem trước ảnh nội dung" class="img-fluid rounded shadow-sm mt-2" style="max-width: 400px; max-height: 200px; object-fit: cover;" />
                        <span class="text-danger" asp-validation-for="ImageUrl"></span>
                    </div>

                    <!-- Thứ tự hiển thị -->
                    <div class="col-md-6 col-sm-12">
                        <label asp-for="DisplayOrder" class="form-label fw-semibold">Thứ tự hiển thị</label>
                        <input asp-for="DisplayOrder" class="form-control" type="number" min="1" required placeholder="Nhập thứ tự" aria-describedby="displayOrderHelp" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        <small id="displayOrderHelp" class="form-text text-muted">Số thứ tự hiển thị, ví dụ: 1, 2, 3...</small>
                    </div>

                    <!-- Trạng thái -->
                    <div class="col-md-6 col-sm-12">
                        <label class="form-label fw-semibold">Trạng thái</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="IsActive" id="isActiveTrue" value="true" @(Model.IsActive ?? false ? "checked" : "") aria-label="Hoạt động" />
                            <label class="form-check-label" for="isActiveTrue">Hoạt động</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="IsActive" id="isActiveFalse" value="false" @(!Model.IsActive ?? false ? "checked" : "") aria-label="Không hoạt động" />
                            <label class="form-check-label" for="isActiveFalse">Không hoạt động</label>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="bi bi-save me-2"></i>Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const imageFileInput = document.getElementById('imageFile');
            const imagePreview = document.getElementById('imagePreview');

            imageFileInput.addEventListener('change', (event) => {
                const file = event.target.files[0];
                if (file) {
                    if (!['image/jpeg', 'image/png', 'image/gif'].includes(file.type)) {
                        alert('Vui lòng chọn file ảnh định dạng JPEG, PNG hoặc GIF.');
                        imageFileInput.value = '';
                        imagePreview.src = '@(ViewBag.ImageExists ? Url.Content(Model.ImageUrl) : "/images/placeholder.png")';
                        return;
                    }
                    const reader = new FileReader();
                    reader.onload = (e) => {
                        imagePreview.src = e.target.result;
                    };
                    reader.onerror = () => {
                        alert('Lỗi khi đọc file ảnh.');
                        imagePreview.src = '@(ViewBag.ImageExists ? Url.Content(Model.ImageUrl) : "/images/placeholder.png")';
                    };
                    reader.readAsDataURL(file);
                } else {
                    imagePreview.src = '@(ViewBag.ImageExists ? Url.Content(Model.ImageUrl) : "/images/placeholder.png")';
                }
            });
        });
    </script>
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .form-control, .btn {
            border-radius: 0.375rem;
        }

        .form-label {
            margin-bottom: 0.25rem;
            font-size: 0.9rem;
        }

        .form-text {
            font-size: 0.85rem;
        }

        .img-fluid {
            border-radius: 0.25rem;
        }

        .alert-dismissible {
            border-radius: 0.375rem;
        }
    </style>
}