@model List<WebLego.Areas.Admin.Models.AboutUsSectionViewModel>
@{
    ViewData["Title"] = "Quản lý Nội dung Trang Giới thiệu";
    var currentRoleId = (int?)ViewBag.CurrentRoleId ?? 0;
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            @if (currentRoleId == 3)
            {
                <a asp-action="Create" class="btn btn-success btn-sm shadow-sm" aria-label="Thêm nội dung mới">
                    <i class="bi bi-plus-circle me-2"></i>Thêm Nội dung Mới
                </a>
            }
        </div>
        <div class="card-body">
            <!-- Success/Error Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo thành công"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo lỗi"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center mb-0">
                    <thead class="table-light text-uppercase small">
                        <tr>
                            <th style="width: 20%">Tiêu đề</th>
                            <th style="width: 20%">Ảnh</th>
                            <th style="width: 15%">Trạng Thái</th>
                            <th style="width: 10%">Thứ tự</th>
@*                             <th style="width: 15%">Ngày Tạo</th>
                            <th style="width: 15%">Người Tạo</th> *@
                            <th style="width: 25%">Hành Động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="7" class="text-center py-3">Chưa có nội dung nào.</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-start text-truncate" style="max-width: 200px;" title="@item.Title">@(item.Title ?? "-")</td>
                                    <td>
                                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/placeholder.png" : Url.Content(item.ImageUrl))" alt="@(item.Title ?? "Ảnh nội dung")" class="img-fluid rounded shadow-sm" style="max-width: 150px; max-height: 100px; object-fit: cover;" />
                                    </td>
                                    <td>
                                        <select class="form-control form-control-sm status-dropdown"
                                                data-section-id="@item.SectionId"
                                        @(currentRoleId != 3 ? "disabled" : "")>
                                            @if (item.IsActive)
                                            {
                                                <option value="true" selected>Hoạt động</option>
                                                <option value="false">Không hoạt động</option>
                                            }
                                            else
                                            {
                                                <option value="true">Hoạt động</option>
                                                <option value="false" selected>Không hoạt động</option>
                                            }
                                        </select>
                                    </td>
                                    <td>@item.DisplayOrder</td>
                                    @* <td class="text-nowrap">@(item.CreatedAt.ToString("dd/MM/yyyy"))</td>
                                    <td class="text-truncate" style="max-width: 150px;" title="@item.CreatedByName">@(item.CreatedByName ?? "-")</td> *@
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.SectionId" class="btn btn-info btn-sm shadow-sm" title="Chi tiết nội dung" aria-label="Chi tiết nội dung @item.SectionId">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (currentRoleId == 3)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.SectionId" class="btn btn-warning btn-sm shadow-sm ms-1" title="Sửa nội dung" aria-label="Sửa nội dung @item.SectionId">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <button type="button" class="btn btn-danger btn-sm shadow-sm ms-1" data-bs-toggle="modal" data-bs-target="#deleteModal_@item.SectionId" title="Xóa nội dung" aria-label="Xóa nội dung @item.SectionId">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </td>
                                </tr>

                                <!-- Delete Confirmation Modal -->
                                @if (currentRoleId == 3)
                                {
                                    <div class="modal fade" id="deleteModal_@item.SectionId" tabindex="-1" aria-labelledby="deleteModalLabel_@item.SectionId" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <form asp-action="Delete" asp-route-id="@item.SectionId" method="post">
                                                @Html.AntiForgeryToken()
                                                <div class="modal-content shadow-sm">
                                                    <div class="modal-header bg-danger text-white">
                                                        <h5 class="modal-title" id="deleteModalLabel_@item.SectionId"><i class="bi bi-exclamation-triangle-fill me-2"></i>Xác nhận xóa</h5>
                                                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Bạn có chắc muốn xóa nội dung <strong>@(item.Title ?? "N/A")</strong> không?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Hủy</button>
                                                        <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const dropdowns = document.querySelectorAll('.status-dropdown');
            dropdowns.forEach(dropdown => {
                dropdown.addEventListener('change', async () => {
                    const sectionId = dropdown.dataset.sectionId;
                    const isActive = dropdown.value === 'true';
                    const originalValue = dropdown.dataset.originalValue || dropdown.value;
                    dropdown.dataset.originalValue = dropdown.value;

                    try {
                        const response = await fetch('/Admin/AboutUsSections/ToggleActive', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                            },
                            body: `id=${sectionId}`
                        });

                        const data = await response.json();
                        if (data.success) {
                            alert('Cập nhật trạng thái thành công!');
                            dropdown.value = data.isActive ? 'true' : 'false';
                        } else {
                            alert('Lỗi cập nhật trạng thái.');
                            dropdown.value = originalValue;
                        }
                    } catch (error) {
                        alert('Lỗi khi gửi yêu cầu.');
                        dropdown.value = originalValue;
                    }
                });
            });
        });
    </script>
    <style>
        .card {
            border-radius: 0.5rem;
        }
        .table {
            border-radius: 0.375rem;
            overflow: hidden;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .form-select-sm {
            font-size: 0.85rem;
        }
        .btn {
            border-radius: 0.375rem;
        }
        .img-fluid {
            border-radius: 0.25rem;
        }
        .alert-dismissible {
            border-radius: 0.375rem;
        }
        .text-truncate {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
}