@model IEnumerable<WebLego.Models.ViewModel.CommunityPostViewModel>
@{
    ViewData["Title"] = "Quản lý bài đăng cộng đồng";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-list me-2 fs-5"></i> Danh sách bài đăng
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light text-center">
                        <tr>
                            <th>Mã bài đăng</th>
                            <th>Người đăng</th>
                            <th>Sản phẩm</th>
                            <th>Cuộc thi</th>
@*                             <th style="min-width: 220px;">Mô tả</th>
                            <th>Hình ảnh</th> *@
                            <th>Ngày đăng</th>
                            <th>Bình luận</th>
                            <th>Vote</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var post in Model)
                        {
                            <tr>
                                <td class="text-center">@post.PostId</td>
                                <td>@post.UserName</td>
                                <td>@post.ProductName</td>
                                <td>@post.ContestTitle</td>
                          @*       <td class="text-truncate" style="max-width: 220px;" title="@post.Description">
                                    @(string.IsNullOrEmpty(post.Description) ? "" : (post.Description.Length > 100 ? post.Description.Substring(0, 100) + "..." : post.Description))
                                </td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(post.ImageUrl))
                                    {
                                        <img src="@post.ImageUrl" alt="Hình ảnh bài đăng" class="img-thumbnail" style="max-width: 100px; height: auto;" />
                                    }
                                </td> *@
                                <td class="text-center">@post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="text-center">@post.CommentCount</td>
                                <td class="text-center">@post.VoteCount</td>
                                <td class="text-center">
                                    @if (post.IsFlagged)
                                    {
                                        <span class="badge bg-danger">Đã ẩn</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Hiển thị</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@post.PostId" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="11" class="text-center py-4 text-muted">Không có bài đăng nào.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

<style>
    /* Truncate mô tả dài trong bảng */
    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Căn giữa header và cell text-center */
    th.text-center,
    td.text-center {
        vertical-align: middle;
    }

    /* Căn giữa ảnh, các icon */
    img.img-thumbnail {
        border-radius: 0.375rem;
    }
</style>
