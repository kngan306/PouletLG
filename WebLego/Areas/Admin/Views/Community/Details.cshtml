@model WebLego.Models.ViewModel.CommunityPostViewModel
@{
    ViewData["Title"] = "Chi tiết bài đăng cộng đồng";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-info-circle me-2 fs-5"></i> Thông tin bài đăng
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Mã bài đăng</dt>
                <dd class="col-sm-9">@Model.PostId</dd>

                <dt class="col-sm-3 fw-semibold">Người đăng</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3 fw-semibold">Sản phẩm</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3 fw-semibold">Cuộc thi</dt>
                <dd class="col-sm-9">@Model.ContestTitle</dd>

                <dt class="col-sm-3 fw-semibold">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-semibold">Hình ảnh</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="Hình ảnh bài đăng" class="img-fluid rounded" style="max-width: 300px;" />
                    }
                    else
                    {
                        <span class="text-muted">Không có hình ảnh</span>
                    }
                </dd>

                <dt class="col-sm-3 fw-semibold">Ngày đăng</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                <dt class="col-sm-3 fw-semibold">Số bình luận</dt>
                <dd class="col-sm-9">@Model.CommentCount</dd>

                <dt class="col-sm-3 fw-semibold">Số lượt vote</dt>
                <dd class="col-sm-9">@Model.VoteCount</dd>

                <dt class="col-sm-3 fw-semibold">Trạng thái</dt>
                <dd class="col-sm-9">
                    @if (Model.IsFlagged)
                    {
                        <span class="badge bg-danger">Đã ẩn</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Hiển thị</span>
                    }
                </dd>
            </dl>

            <div class="mt-3 d-flex flex-wrap gap-2 align-items-center">
                @if (Model.IsFlagged)
                {
                    <form asp-action="UnflagPost" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.PostId" />
                        <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Bạn có chắc chắn muốn bỏ ẩn bài đăng này?')">
                            <i class="bi bi-eye"></i> Bỏ ẩn bài đăng
                        </button>
                    </form>
                }
                else
                {
                    <form asp-action="FlagPost" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.PostId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn ẩn bài đăng này?')">
                            <i class="bi bi-eye-slash"></i> Ẩn bài đăng
                        </button>
                    </form>
                }

                <a asp-action="Index" class="btn btn-secondary btn-sm ms-auto">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-chat-dots me-2 fs-5"></i> Bình luận
        </div>
        <div class="card-body">
            @if (Model.Comments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th>Mã bình luận</th>
                                <th>Người bình luận</th>
                                <th>Nội dung</th>
                                <th>Ngày bình luận</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model.Comments)
                            {
                                <tr>
                                    <td class="text-center">@comment.CommentId</td>
                                    <td>@comment.UserName</td>
                                    <td>@comment.CommentText</td>
                                    <td class="text-center">@comment.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">
                                        @if (comment.IsFlagged)
                                        {
                                            <span class="badge bg-danger">Đã ẩn</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">Hiển thị</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (comment.IsFlagged)
                                        {
                                            <form asp-action="UnflagComment" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@comment.CommentId" />
                                                <button type="submit" class="btn btn-success btn-sm" onclick="return confirm('Bạn có chắc chắn muốn bỏ ẩn bình luận này?')">
                                                    <i class="bi bi-eye"></i> Bỏ ẩn
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-action="FlagComment" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@comment.CommentId" />
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn ẩn bình luận này?')">
                                                    <i class="bi bi-eye-slash"></i> Ẩn
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">Chưa có bình luận nào cho bài đăng này.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
