@model WebLego.Areas.Admin.Models.ContactViewModel
@{
    ViewData["Title"] = "Thêm thông tin liên hệ";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">

        <div class="card-body">
            <!-- Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <strong>Vui lòng kiểm tra lại các trường nhập liệu:</strong>
                    <ul class="mb-0">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo lỗi"></button>
                </div>
            }

            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4 alert alert-danger alert-dismissible fade show" role="alert" style="@(ViewData.ModelState.IsValid ? "display: none;" : "")">
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo lỗi"></button>
                </div>

                <div class="row g-3">
                    <!-- Số điện thoại -->
                    <div class="col-md-6 col-sm-12">
                        <label asp-for="PhoneNumber" class="form-label fw-semibold">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" required placeholder="Nhập số điện thoại" aria-describedby="phoneNumberHelp" autocomplete="tel" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        <small id="phoneNumberHelp" class="form-text text-muted">Ví dụ: +84 123 456 789</small>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 col-sm-12">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" class="form-control" type="email" required placeholder="Nhập email" aria-describedby="emailHelp" autocomplete="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small id="emailHelp" class="form-text text-muted">Ví dụ: example@domain.com</small>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="col-12">
                        <label asp-for="Address" class="form-label fw-semibold">Địa chỉ</label>
                        <input asp-for="Address" class="form-control" required placeholder="Nhập địa chỉ" aria-describedby="addressHelp" autocomplete="street-address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                        <small id="addressHelp" class="form-text text-muted">Nhập địa chỉ đầy đủ, bao gồm thành phố và quốc gia.</small>
                    </div>

                    <!-- Vĩ độ -->
                    <div class="col-md-6 col-sm-12">
                        <label asp-for="Latitude" class="form-label fw-semibold">Vĩ độ</label>
                        <input asp-for="Latitude" class="form-control" type="number" step="any" placeholder="Nhập vĩ độ" aria-describedby="latitudeHelp" />
                        <span asp-validation-for="Latitude" class="text-danger"></span>
                        <small id="latitudeHelp" class="form-text text-muted">Ví dụ: 21.028511 (tùy chọn).</small>
                    </div>

                    <!-- Kinh độ -->
                    <div class="col-md-6 col-sm-12">
                        <label asp-for="Longitude" class="form-label fw-semibold">Kinh độ</label>
                        <input asp-for="Longitude" class="form-control" type="number" step="any" placeholder="Nhập kinh độ" aria-describedby="longitudeHelp" />
                        <span asp-validation-for="Longitude" class="text-danger"></span>
                        <small id="longitudeHelp" class="form-text text-muted">Ví dụ: 105.854444 (tùy chọn).</small>
                    </div>

                    <!-- Trạng thái -->
                    <div class="col-md-6 col-sm-12">
                        <label asp-for="IsActive" class="form-label fw-semibold">Trạng thái</label>
                        <div class="form-check">
                            <input type="radio" asp-for="IsActive" id="IsActiveTrue" name="IsActive" value="true" checked class="form-check-input" required aria-label="Hoạt động" />
                            <label class="form-check-label" for="IsActiveTrue">Hoạt động</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="IsActive" id="IsActiveFalse" name="IsActive" value="false" class="form-check-input" aria-label="Không hoạt động" />
                            <label class="form-check-label" for="IsActiveFalse">Không hoạt động</label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-4 d-flex gap-2">
                    <button type="submit" class="btn btn-primary shadow-sm">
                        <i class="bi bi-save me-2"></i>Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                        <i class="bi bi-arrow-left me-2"></i>Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .form-control, .btn {
            border-radius: 0.375rem;
        }

        .form-label {
            margin-bottom: 0.25rem;
            font-size: 0.9rem;
        }

        .form-text {
            font-size: 0.85rem;
        }

        .alert-dismissible {
            border-radius: 0.375rem;
        }
    </style>
}