@model IEnumerable<WebLego.Areas.Admin.Models.ContactViewModel>
@{
    ViewData["Title"] = "Quản lý thông tin liên hệ";
}

<div class="container-fluid py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <a asp-action="Create" class="btn btn-success btn-sm shadow-sm" aria-label="Thêm thông tin liên hệ mới">
                <i class="bi bi-plus-circle me-2"></i>Thêm mới
            </a>
        </div>
        <div class="card-body">
            <!-- Success Message -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Đóng thông báo thành công"></button>
                </div>
            }

            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle text-center mb-0">
                    <thead class="table-light text-uppercase small">
                        <tr>
                            <th style="width: 5%">STT</th>
                            <th style="width: 15%">Số điện thoại</th>
                            <th style="width: 20%">Địa chỉ</th>
                            <th style="width: 15%">Email</th>
                            <th style="width: 10%">Vĩ độ</th>
                            <th style="width: 10%">Kinh độ</th>
                            <th style="width: 10%">Trạng thái</th>
@*                             <th style="width: 15%">Ngày tạo</th>
                            <th style="width: 10%">Người tạo</th> *@
                            <th style="width: 15%">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="10" class="text-center py-3">Chưa có thông tin liên hệ nào.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(Model.ToList().IndexOf(item) + 1)</td>
                                    <td class="text-nowrap">@(item.PhoneNumber ?? "-")</td>
                                    <td class="text-start text-truncate" style="max-width: 200px;" title="@item.Address">@(item.Address ?? "-")</td>
                                    <td class="text-start text-truncate" style="max-width: 150px;" title="@item.Email">@(item.Email ?? "-")</td>
                                    <td>@(item.Latitude?.ToString("F6") ?? "-")</td>
                                    <td>@(item.Longitude?.ToString("F6") ?? "-")</td>
                                    <td>
                                        <span class="badge @(item.IsActive ? "bg-success" : "bg-danger") rounded-pill">
                                            @(item.IsActive ? "Hoạt động" : "Không hoạt động")
                                        </span>
                                    </td>
                                    @* <td class="text-nowrap">@(item.CreatedAt.ToString("dd/MM/yyyy HH:mm"))</td>
                                    <td class="text-truncate" style="max-width: 150px;" title="@item.CreatedByName">@(item.CreatedByName ?? "-")</td> *@
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.ContactId" class="btn btn-warning btn-sm shadow-sm" title="Sửa thông tin liên hệ" aria-label="Sửa thông tin liên hệ @item.ContactId">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <button type="button" class="btn btn-danger btn-sm shadow-sm ms-1" data-bs-toggle="modal" data-bs-target="#deleteModal_@item.ContactId" title="Xóa thông tin liên hệ" aria-label="Xóa thông tin liên hệ @item.ContactId">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>

                                <!-- Delete Confirmation Modal -->
                                <div class="modal fade" id="deleteModal_@item.ContactId" tabindex="-1" aria-labelledby="deleteModalLabel_@item.ContactId" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <form asp-action="Delete" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.ContactId" />
                                            <div class="modal-content shadow-sm">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title" id="deleteModalLabel_@item.ContactId"><i class="bi bi-exclamation-triangle-fill me-2"></i>Xác nhận xóa</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                                </div>
                                                <div class="modal-body">
                                                    Bạn có chắc muốn xóa thông tin liên hệ với số điện thoại <strong>@(item.PhoneNumber ?? "N/A")</strong> không?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-outline-secondary btn-sm" data-bs-dismiss="modal">Hủy</button>
                                                    <button type="submit" class="btn btn-danger btn-sm">Xóa</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card {
            border-radius: 0.5rem;
        }

        .table {
            border-radius: 0.375rem;
            overflow: hidden;
        }

            .table th, .table td {
                vertical-align: middle;
            }

        .badge {
            font-size: 0.85rem;
            padding: 0.5em 0.75em;
        }

        .btn {
            border-radius: 0.375rem;
        }

        .text-truncate {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .alert-dismissible {
            border-radius: 0.375rem;
        }
    </style>
}